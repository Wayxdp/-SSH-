<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%
    String path = request.getContextPath();
%>
<html>
<head>
    <title>Title</title>
    <link href="<%=path %>/public/plugins/easyui/themes/bootstrap/easyui.css" rel="stylesheet"/>
    <link href="<%=path %>/public/plugins/easyui/themes/icon.css" rel="stylesheet"/>
    <link href="<%=path %>/public/css/zhang/main.css" rel="stylesheet" />
</head>
<body>

<!--显示分页的表格-->
<table id="list" class="easyui-datagrid"
       data-options="
        singleSelect:true,
        collapsible:true,
        rownumbers:true,
        pagination:true,
        pageSize:20,
        toolbar:'#tb',
        url:'<%=path %>/agency/pagerAgency',
        method:'get'">
    <thead>
    <tr>
        <th data-options="field:'id',width:60,checkbox:true">员工名称</th>
        <th data-options="field:'name',">邮箱</th>
        <th data-options="field:'email',align:'right'">手机号</th>
        <th data-options="field:'qq',align:'right'">qq号</th>
        <th data-options="field:'wechat',align:'right'">微信号</th>
        <th data-options="field:'gender',align:'right'">性别</th>
        <th data-options="field:'exp',formatter:formatStatus">工作经验描述</th>
        <th data-options="field:'des',align:'center',formatter:formatStatus">个人说明</th>
        <th data-options="field:'address',align:'center',formatter:formatStatus">地址</th>
        <th data-options="field:'basic_salary',align:'center',formatter:formatStatus">基本工资</th>
        <th data-options="field:'intro',align:'center',formatter:formatStatus">简介</th>
        <th data-options="field:'created_time',align:'center',formatter:formatStatus">创建时间</th>
        <th data-options="field:'status',align:'center',formatter:formatStatus">状态</th>
    </tr>
    </thead>
</table>

<!--顶部栏-->
<div id="tb">
    <a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-remove" onclick="addEmployee();">添加员工</a>
    <a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-remove" onclick="editEmployee();">修改员工</a>
    <a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-remove" onclick="showEmployee();">显示员工</a>
    <a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-remove" onclick="validEmployee(1);">激活员工</a>
    <a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-remove" onclick="validEmployee(0);">冻结员工</a>
</div>

</body>

<script src="<%=path %>/public/plugins/jquery.min.js"></script>
<script src="<%=path %>/public/plugins/easyui/jquery.easyui.min.js"></script>
<script src="<%=path %>/public/plugins/easyui/locale/easyui-lang-zh_CN.js"></script>
<script src="<%=path %>/public/plugins/easyui/site-easyui.js"></script>
<script src="<%=path %>/public/js/zhang/agencies.js"></script>
<script>
    $(function () {
        setPagination("list");
    })
</script>
</html>
