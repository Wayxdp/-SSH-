/**
 *上传电子版合同
 */
function uploadContractFile() {
    var row = $("#list").datagrid("getSelected");
    if (row){
        var customer_id = row.id;
        document.getElementById("customer_id").innerHTML(customer_id);
        window.location.href='emp_uploadContract.jsp'
    }else{
        showAlert("请选择上传的对象！");
    }
}